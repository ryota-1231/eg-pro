%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name
    %br/
    = f.text_field :name, autocomplete: "name", placeholder: 'ニックネーム入力(必須)'
  .field
    = f.label :avatar, 'アバターの設定(任意)'
    %br/
    = f.file_field :avatar, autocomplete: "avatar", placeholder: 'アバターの設定(任意)'
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス入力(必須)'
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length}文字以上 12文字以内 )
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "users/shared/links"
